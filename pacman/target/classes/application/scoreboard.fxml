<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?> <?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ScoreboardController" alignment="CENTER" spacing="12.0" style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e, #0f3460);" prefWidth="700" prefHeight="550">
    <children>
        <Label text="Top Scores" style="-fx-font-size:32px; -fx-text-fill: linear-gradient(to right, #FFD700, #FFA500, #FFD700); -fx-font-weight: bold;" />

        <HBox spacing="8" alignment="CENTER"> <children>
            <Button text="Solo" onAction="#onSolo" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #FFD700, #FFA500); -fx-text-fill: #000033; -fx-background-radius: 8px; -fx-padding: 8px 16px;" />
            <Button text="Global" onAction="#onGlobal" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #4A90E2, #357ABD); -fx-text-fill: #FFFFFF; -fx-background-radius: 8px; -fx-padding: 8px 16px;" />
            <Button text="Duo" onAction="#onDuo" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #00FF00, #00CC00); -fx-text-fill: #000033; -fx-background-radius: 8px; -fx-padding: 8px 16px;" />
            <Button text="Duo Global" onAction="#onDuoGlobal" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #FF6B6B, #E55555); -fx-text-fill: #FFFFFF; -fx-background-radius: 8px; -fx-padding: 8px 16px;" />
            <Button text="Ranked" onAction="#onRanked" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #9B59B6, #8E44AD); -fx-text-fill: #FFFFFF; -fx-background-radius: 8px; -fx-padding: 8px 16px;" />
            <Button fx:id="adminButton" text="Admin" onAction="#onAdmin" visible="false" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #E74C3C, #C0392B); -fx-text-fill: #FFFFFF; -fx-background-radius: 8px; -fx-padding: 8px 16px;" />
        </children>
        </HBox>

        <ListView fx:id="scoresList" prefHeight="320" prefWidth="500" maxWidth="500" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-background-radius: 10px; -fx-border-color: linear-gradient(to right, #FFD700, #FFA500); -fx-border-width: 2px; -fx-border-radius: 10px;" />
        <HBox spacing="8" alignment="CENTER">
            <children>
                <Button fx:id="deleteButton" text="Delete Selected" onAction="#onDeleteScore" visible="false" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #E74C3C, #C0392B); -fx-text-fill: #FFFFFF; -fx-background-radius: 8px; -fx-padding: 8px 16px;" />
                <Button text="Back" onAction="#onBack" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50); -fx-text-fill: #FFFFFF; -fx-background-radius: 8px; -fx-padding: 10px 24px;" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="30" />
    </padding>
</VBox>