<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SignInController" 
      alignment="CENTER" spacing="20.0" prefWidth="500" prefHeight="450" 
      style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #000033 0%, #1a0033 50%, #000033 100%);">
    <children>
        <Label text="Sign In" 
               style="-fx-font-size: 36px; -fx-text-fill: linear-gradient(to right, #FFFF66, #FFD700); -fx-font-weight: bold;">
            <font>
                <Font name="Arial Black" size="36.0" />
            </font>
        </Label>
        
        <VBox spacing="15.0" alignment="CENTER" 
              style="-fx-background-color: linear-gradient(to bottom, rgba(0, 50, 100, 0.6), rgba(0, 30, 70, 0.6)); -fx-background-radius: 15px; -fx-padding: 30px; -fx-border-color: linear-gradient(to bottom, #00FFFF, #0099CC); -fx-border-width: 2px; -fx-border-radius: 15px;">
            <children>
                <TextField fx:id="usernameField" promptText="Username" 
                           style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-radius: 10px; -fx-border-color: #FFFF66; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: #FFFFFF;" />
                <PasswordField fx:id="passwordField" promptText="Password" 
                               style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-radius: 10px; -fx-border-color: #FFFF66; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: #FFFFFF;" />
                
                <Button text="Sign In" onAction="#onSignIn" 
                        prefWidth="200" prefHeight="45"
                        style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #FFD700, #FFA500); -fx-text-fill: #000033; -fx-background-radius: 10px; -fx-cursor: hand;">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Button>
                
                <Button text="Create account" onAction="#onGoToSignUp" 
                        prefWidth="200" prefHeight="45"
                        style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #4A90E2, #357ABD); -fx-text-fill: #FFFFFF; -fx-background-radius: 10px; -fx-cursor: hand;">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                </Button>
            </children>
        </VBox>
        
        <Label fx:id="messageLabel" text="" 
               style="-fx-text-fill: linear-gradient(to right, #FF6B6B, #FF8888); -fx-font-size: 14px; -fx-font-weight: bold;" />
    </children>
    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>
</VBox>
