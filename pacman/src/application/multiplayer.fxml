<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MultiplayerController" alignment="CENTER" spacing="15.0" prefWidth="500" prefHeight="450" style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e, #0f3460);">
    <children>
        <Label text="Multiplayer" style="-fx-font-size:32px; -fx-text-fill: linear-gradient(to right, #FFD700, #FFA500, #FFD700); -fx-font-weight: bold;" />
        
        <VBox spacing="12" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-background-radius: 15px; -fx-padding: 20px; -fx-border-color: linear-gradient(to right, #4A90E2, #357ABD); -fx-border-width: 2px; -fx-border-radius: 15px;" prefWidth="400">
            <children>
                <Button text="Local Play (2 players)" onAction="#onLocal" 
                        prefWidth="280" prefHeight="45"
                        style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #00FF00, #00CC00); -fx-text-fill: #000033; -fx-background-radius: 10px; -fx-cursor: hand;" />
                
                <Label text="Online" style="-fx-font-size:18px; -fx-text-fill: linear-gradient(to right, #4A90E2, #66B3FF); -fx-font-weight: bold; -fx-padding: 15 0 5 0;" />
                
                <Button text="Create Room" onAction="#onCreateRoom" 
                        prefWidth="280" prefHeight="45"
                        style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #4A90E2, #357ABD); -fx-text-fill: #FFFFFF; -fx-background-radius: 10px; -fx-cursor: hand;" />
                
                <Label text="Room Code:" style="-fx-text-fill: linear-gradient(to right, #FFFFFF, #CCCCCC); -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 0 5 0;" />
                
                <HBox spacing="8" alignment="CENTER">
                    <children>
                        <TextField fx:id="roomCodeField" promptText="Enter room code to join" 
                                   prefWidth="200" prefHeight="35"
                                   style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 8px; -fx-border-color: #4A90E2; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-font-size: 14px;" />
                    </children>
                </HBox>
                
                <Button text="Join Room" onAction="#onJoinRoom" 
                        prefWidth="280" prefHeight="45"
                        style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #9B59B6, #8E44AD); -fx-text-fill: #FFFFFF; -fx-background-radius: 10px; -fx-cursor: hand;" />
            </children>
        </VBox>
        
        <Button text="Back" onAction="#onBack" 
                prefWidth="200" prefHeight="40"
                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50); -fx-text-fill: #FFFFFF; -fx-background-radius: 10px; -fx-cursor: hand;" />
        
        <Label fx:id="statusLabel" text="" style="-fx-text-fill: linear-gradient(to right, #FFD700, #FFA500); -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
    </children>
    <padding>
        <Insets top="30" right="20" left="20" bottom="20" />
    </padding>
</VBox>
