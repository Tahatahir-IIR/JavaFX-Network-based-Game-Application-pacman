<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SignUpController" alignment="CENTER" spacing="10.0" prefWidth="400" prefHeight="320" style="-fx-background-color: linear-gradient(#000033,#00001a);">
    <children>
        <Label text="Create Account" style="-fx-font-size:18px; -fx-text-fill: #FFFF66;" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <PasswordField fx:id="passwordConfirmField" promptText="Confirm password" />
        <Button text="Sign Up" onAction="#onSignUp" prefWidth="160" />
        <Button text="Back to Sign In" onAction="#onBackToSignIn" prefWidth="160" />
        <Label fx:id="messageLabel" text="" style="-fx-text-fill: #ff7777;" />
    </children>
    <padding>
        <Insets top="12" right="20" left="20" />
    </padding>
</VBox>
